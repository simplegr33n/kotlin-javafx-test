<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
      <HBox VBox.vgrow="NEVER">
            <Label fx:id="name_label" text="Player Name" />
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
            <VBox HBox.hgrow="ALWAYS">
                  <ListView fx:id="log_listview" VBox.vgrow="ALWAYS" />
                  <HBox VBox.vgrow="NEVER">
                        <TextField fx:id="input_textfield" HBox.hgrow="ALWAYS" />
                        <Button fx:id="enter_button" mnemonicParsing="false" text="ENTER" />
                  </HBox>
            </VBox>
            <VBox minWidth="300.0" prefWidth="300.0" HBox.hgrow="NEVER" />
      </HBox>
</VBox>
